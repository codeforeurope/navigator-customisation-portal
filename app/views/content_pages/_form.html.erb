 <%=form_for @page do |f|%>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this content page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if params[:theme_id] != nil %>
	<input type="hidden" name="theme_id" value="<%= params[:theme_id] %>"/>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :item_order %><br />
    <%= f.text_field :item_order %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "ckeditor" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
